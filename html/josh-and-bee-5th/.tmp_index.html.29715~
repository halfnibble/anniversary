		<script src="http://connect.facebook.net/en_US/all.js"></script>
			<script>
				FB.init({
    				status : true, // check login status
    				cookie : true, // enable cookies to allow the server to access the session
    				xfbml  : true  // parse XFBML
  				});
			</script>
		<script src="http://connect.facebook.net/en_US/all.js#appId=165669750163131&amp;xfbml=1"></script>
		<script type="text/javascript">
			var winWidth = document.documentElement.clientWidth;
			var messageWidth = (winWidth - 800 ) / 2;
			
			//popup scripting: 
			var message_status = 0;			
			function toggle_status() {
				if(message_status == 0){
					$("#message-box").css({
						"position": "absolute",
						"margin-left": messageWidth
					});
					$("#message-box").fadeIn("slow");
					message_status = 1;
				} else {
					$("#message-box").fadeOut("slow");
					message_status = 0;
				}
			}
			$( function() {
				toggle_status();
			});
			
			//message scripting:
			var msg = 0;
			var message = new Array();
			message[0] = "<p>Dear Bee,<br />I want you to know that I've enjoyed every single moment with you...</p>";
			message[1] = "<p>And that I've spent a lot of time considering what to get you for our anniversary...</p>";
			message[2] = "<p>But the traditional \"wood\" or modern \"silver\" just didn't seem good enough...</p>";
			message[3] = "<p>I think you deserve brilliant diamonds for making me so happy these past years...</p>";
			message[4] = "<p>But you know as well as I do that we really can't afford to buy diamonds right now...</p>";
			message[5] = "<p>So...I created a 3 dimensional model of a diamond for you...</p>";
			message[6] = "<p>I hope you like it.</p><p> Love, Joshua </p>";
			
			//attach events:
			$( function() {
				$("#next").click( function() {
					if(msg < 6) {
						msg += 1;
						$("#message").replaceWith("<div id='message'>" + message[msg] + "</div>");
					} else {
						toggle_status();
					}
				});
				$("#previous").click( function() {
					if(msg > 0) {
						msg -= 1;
						$("#message").replaceWith("<div id='message'>" + message[msg] + "</div>");
					} else {
						toggle_status();
					}
				});
				$("m")
			});
		</script>
		<style type="text/css">
			
